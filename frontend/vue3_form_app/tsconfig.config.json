{
  "include": [
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "playwright.config.*",
    "src/**/*.ts",
    "src/**/*.vue"
  ],
  "compilerOptions": {
    "composite": true,
    "types": ["node"],
    "verbatimModuleSyntax": true,
    "ignoreDeprecations": "5.0",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  }
}
